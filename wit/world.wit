package fermyon:hmac@0.1.0;

world signing {
    export types;
    export sign;
    export verify;
}

world producer {
    import sign;
}

world consumer {
    import verify;
}


interface sign {
    use types.{error};
    sign: func(data: list<u8>, key: list<u8>) -> result<list<u8>, error>;
}

interface verify {
    verify: func(data: list<u8>, key: list<u8>, signature: list<u8>) -> bool;
}

interface types {
    type error = string;
}
